    <delete id="deleteMultipleByPid">
        DELETE FROM device
        WHERE uid = #{device.uid}
        AND pid IN
        <foreach item="item" collection="pidList" separator="," open="(" close=")" index="">
            #{item}
        </foreach>
    </delete>

    <delete id="deleteMultiple">
        DELETE FROM device
        WHERE uid = #{user.uid}
        AND did IN
        <foreach item="item" collection="didList" separator="," open="(" close=")" index="">
            #{item}
        </foreach>
    </delete>
