        did, name, status, create_time, active_time, last_time, pid
    </sql>

    <select id="selectWithProduct" resultType="com.sqlist.web.vo.DeviceResponseVO">
        SELECT d.*, p.name productName
        FROM device d, product p
        WHERE d.uid = #{uid}
        <if test="pid != null">
            AND d.pid = ${pid}
        </if>
        AND d.pid = p.pid
    </select>

